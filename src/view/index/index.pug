extends ../index

block variables
    - var title = 'Главная'

block content

    main.index#index
        .index__container

            search

            flickity.index__slider(ref="flickity" :options="flickityOptions")
                -for(var i = 0; i < 3; i++ )
                    .index__slide
                        .index__slide-text
                            vue-typer.accent(
                            text='Случилась неожиданная поломка?'
                            :repeat="0"
                            @typed="onTyped(" + i + ")"
                            )
                            vue-typer(
                                v-if="typeds[" + i + "]"
                                text='Решим проблему любого водителя!'
                                :repeat="0"
                                )
                                
                        span.index__slide-image
                            img(src="http://via.placeholder.com/1920x1080")

            h1.index__h1 РАЗБОРКА МИКРОАВТОБУСОВ

            include ../../components/last-products/last-products

            //- include ../../components/video/video

            include ../../components/excellence/excellence


            section.index__review
