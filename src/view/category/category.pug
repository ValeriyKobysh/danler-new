extends ../index

block variables
    - var title = 'Категории'

mixin catalog()
    li.category__item
        a.category__link.link(href="javascript:;")
            span.category__image
                img(src=require("../../assets/image/category/engines.png"))
            span Двигатель. Детали двигателя
                span.category__count  (20)

block content

    main.category#category
        .category__container.container.content__container

            search

            include ../../components/breadcrumbs/breadcrumbs

            h1.heading Разборка Mercedes Sprinter (1996-2006)

            section.category__content

                ul.category__list.list
                    - for (var i = 0; i < 15; i++)
                        +catalog()

                .text-block
                    <h2>Разборка Mercedes Sprinter в Украине с нами &ndash; это надежная покупка б/у запчастей с поддержанных микроавтобусов</h2>

